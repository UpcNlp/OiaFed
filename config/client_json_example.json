{
  "client": {
    "id": "json_client_1",
    "learner": {
      "type": "SimpleLearner",
      "args": [],
      "kwargs": {
        "model_config": {
          "architecture": "cnn",
          "input_channels": 3,
          "input_size": [32, 32],
          "num_classes": 10,
          "conv_layers": [
            {"out_channels": 32, "kernel_size": 3, "padding": 1},
            {"out_channels": 64, "kernel_size": 3, "padding": 1},
            {"out_channels": 128, "kernel_size": 3, "padding": 1}
          ],
          "fc_layers": [256, 128]
        },
        "optimizer_config": {
          "type": "sgd",
          "lr": 0.01,
          "momentum": 0.9,
          "weight_decay": 5e-4
        },
        "training_config": {
          "batch_size": 64,
          "epochs_per_round": 10,
          "loss_function": "cross_entropy",
          "device": "cuda"
        },
        "data_config": {
          "dataset": "cifar10",
          "data_path": "./data/cifar10",
          "normalize": true,
          "augmentation": true,
          "augmentation_params": {
            "horizontal_flip": true,
            "random_crop": true,
            "color_jitter": true
          }
        }
      }
    },
    "transport": {
      "type": "memory", 
      "kwargs": {
        "node_id": "json_client_1"
      }
    },
    "rpc": {
      "allowed_methods": [
        "train",
        "get_model", 
        "set_model",
        "evaluate",
        "get_metrics",
        "get_data_stats",
        "ping"
      ],
      "max_concurrent_calls": 5,
      "timeout_seconds": 60
    },
    "auto_start": true
  },
  "local": {
    "data_partition_id": 1,
    "non_iid_alpha": 0.5,
    "privacy_config": {
      "enable_dp": false,
      "noise_multiplier": 1.0,
      "max_grad_norm": 1.0
    }
  }
}
