#!/usr/bin/env python3
"""
FedCL - Federated Continual Learning Framework
专业的命令行工具入口

Usage:
    fedcl run <config>              # 运行联邦学习实验
    fedcl start <config>            # 启动联邦学习（别名）
    fedcl daemon <config>           # 后台运行
    fedcl stop                      # 停止后台进程
    fedcl status                    # 查看运行状态
    fedcl logs [--follow]           # 查看日志
    fedcl clean                     # 清理临时文件
    fedcl init <name>               # 初始化新项目
    fedcl --version                 # 版本信息
    fedcl --help                    # 帮助信息
"""

import sys
from pathlib import Path

# 添加项目根目录到Python路径
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))

try:
    from fedcl.cli.cli import main
except ImportError as e:
    print(f"❌ Failed to import FedCL CLI: {e}")
    print(f"Please ensure you're in the FedCL project directory")
    print(f"Current working directory: {Path.cwd()}")
    print(f"Project root: {project_root}")
    sys.exit(1)

if __name__ == "__main__":
    sys.exit(main())

